{
  "name": "ltt-client",
  "version": "0.1.0",
  "description": "Life time tracker web client",
  "main": "js/app.js",
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d .",
    "build": "NODE_ENV=production browserify . | uglifyjs -cm > js/bundle.min.js",
    "test": "jest"
  },
  "author": "Andrew Zhang",
  "license": "ISC",
  "devDependencies": {
    "browserify": "~6.2.0",
    "browserify-shim": "~3.8.0",
    "envify": "~3.0.0",
    "uglify-js": "~2.4.15",
    "reactify": "~0.15.2",
    "watchify": "~2.1.0"
  },
  "dependencies": {
    "flux": "~2.0.1",
    "react": "~0.12.0",
    "express": "~4.10.1",
    "express3-handlebars": "~0.5.2",
    "morgan": "~1.4.1",
    "lodash": "~2.4.1",
    "q": "~1.0.1"
  },
  "browser": {
    "d3": "./bower_components/d3/d3.min.js",
    "jquery": "./bower_components/jquery/dist/jquery.min.js",
    "nvd3": "./bower_components/nvd3/nv.d3.min.js",
    "highcharts": "./bower_components/highcharts/highcharts.js",
    "bootstrap": "./bower_components/bootstrap/dist/js/bootstrap.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "highcharts": "highcharts",
    "d3": {
      "exports": "d3",
      "depends": [
        "jquery:$"
      ]
    },
    "bootstrap": {
      "exports": "bootstrap",
      "depends": {
        "jquery": "$"
      }
    },
    "nvd3": {
      "exports": "nv",
      "depends": [
        "jquery:$",
        "d3:d3"
      ]
    }
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
